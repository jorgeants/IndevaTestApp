<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%=link_to "Dashboard", root_path %></a></li>
      <li class="active">Users</li>
    </ol>
  </div>
</div>

<%if notice %>
  <div class="alert alert-info" id="notice">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <span class="glyphicon glyphicon-info-sign"></span> <%= notice %>
  </div>
<%end%>

<div class="row header-list">
  <div class="col-md-10 col-sm-9">
    <h1>Users</h1>
  </div>
  <div class="col-md-2 col-sm-3 v-align">
    <div>
      <%= link_to new_user_path, class: 'btn btn-primary pull-right' do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New User
      <%end %>
    </div>
  </div>
</div>

<br>

<div class="table-responsive">
  <table class="table table-hover list">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
<% @users.each do |user| %>
        <tr data-link="<%= user_path(user) %>">
          <td><%= user.name %></td>
          <td class="buttons">
            <%= link_to edit_user_path(user), class: 'btn btn-sm btn-primary' do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <%end%>
            <%= link_to user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this data?"}, class: "btn btn-sm btn-primary" do%>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <%end%>
          </td>
        </tr>
<% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-md-12">
    <nav class="text-center">
      <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
    </nav>
  </div>
</div>

