<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%=link_to "Dashboard", root_path %></a></li>
      <li class="active">Targets</li>
    </ol>
  </div>
</div>

<%if notice %>
  <div class="alert alert-info" id="notice">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <span class="glyphicon glyphicon-info-sign"></span> <%= notice %>
  </div>
<%end%>

<div class="row header-list">
  <div class="col-md-10 col-sm-9">
    <h1>Targets</h1>
  </div>
  <div class="col-md-2 col-sm-3 v-align">
    <div>
      <%= link_to new_target_path, class: 'btn btn-primary pull-right' do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Target
      <%end %>
    </div>
  </div>
</div>

<br>

<div class="table-responsive">
  <table class="table table-hover list">
    <thead>
      <tr>
        <th>Store</th>
        <th>Name</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Value</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
<% @targets.each do |target| %>
        <tr data-link="<%= target_path(target) %>">
          <td><%= target.store.name %></td>
          <td><%= target.name %></td>
          <td><%= target.start_date %></td>
          <td><%= target.end_date %></td>
          <td><%= target.value %></td>
          <td class="buttons">
            <%= link_to edit_target_path(target), class: 'btn btn-sm btn-primary' do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <%end%>
            <%= link_to target_path(target), method: :delete, data: {confirm: "Are you sure you want to delete this data?"}, class: "btn btn-sm btn-primary" do%>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <%end%>
          </td>
        </tr>
<% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-md-12">
    <nav class="text-center">
      <%= will_paginate @targets, renderer: BootstrapPagination::Rails %>
    </nav>
  </div>
</div>

