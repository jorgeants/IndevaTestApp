<div class="row">
  <div class="col-md-6">
	<%= simple_form_for(@target) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :name %>
	    <%= f.input :start_date %>
	    <%= f.input :end_date %>
	    <%= f.input :value_cents %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, class: "btn btn-primary" %>
	  </div>
	<% end %>
  </div>
</div>
